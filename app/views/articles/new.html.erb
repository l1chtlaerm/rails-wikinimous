<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 mx-0">
    <h1>New article</h1>
      <div class="container">
        <%= simple_form_for(@article) do |f| %>
          <%= f.input :title %>
          <%= f.input :content %>
          <%= f.button :submit, "Create article", class: "btn btn-success" %>
        <% end %>
        <%= link_to "Back to index", articles_path %>
      </div>
    </div>
  </div>
</div>
